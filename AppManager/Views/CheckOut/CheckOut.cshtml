@section Scripts{
    <script>
        // category
        $.ajax({
            url: "/Home/GetAllCategories",
            type: "GET",
            dataType: "json",
            beforeSend: function(){},
            success: function(data){
                $('#department').html('');
                $('#department').append('<li><a href="/ShoppingGrid/Index" class="category">All</a></li>');
                data.forEach(function (item,index){
                    let row = `<li><a href="/ShoppingGrid/Index?id=${item.id}" class="category">${item.name}</a></li>`;
                    $('#department').append(row);
                })
            },
            error: function(){},
            complete: function(){}
        });

        // address
        $.ajax({
            url: "/CheckOut/GetAddress",
            type: "GET",
            dataType: "json",
            beforeSend: function(){},
            success: function(data){
                if (data != ""){
                    $('#address').prepend(`<div class="radio">
                                                  <label>
                                                    <input type="radio" class="address" id="0" name="check-address"> Khác 
                                                  </label>
                                                </div>
                                                <br>`);
                    data.forEach(function (item,index){
                        let row = `<div class="radio">
                                        <label>
                                        <input type="radio" id="${item.id}" class="address" name="check-address">
                                            <div style="padding: 1rem; outline: dashed #7fad39; display: inline-block">
                                            Họ tên: ${item.firstName} ${item.lastName}
                                            <br>Địa chỉ: ${item.address}, ${item.city}, ${item.country}
                                            <br>Postcode: ${item.postcode}
                                            <br>Số điện thoại: ${item.phone}
                                            </div>
                                        </label>
                                    </div>
                                    <br>`;
                        $('#address').prepend(row);
                    });
                }
                else {
                    $("#address-form").css("display", "block");
                }
            },
            error: function(){},
            complete: function(){}
        });

        $(document).ready(function(){
            $(document).on('click', '.address', function(){
                if ($(this).attr('id') == "0"){
                    $("#address-form").css("display", "block");
                }
                else {
                    $("#address-form").css("display", "none");
                }
                console.log($(this).attr('id'))
                $("#addressid").val($(this).attr('id'));
            })
        })
    </script>
}